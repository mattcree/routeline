# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file)

# API
GET     /api/stations                   controllers.ApiController.getJsonStations
GET     /api/stops                      controllers.ApiController.getJsonStops

# Admin Routes
# Logging In
GET     /admin                          controllers.AdminController.getLogin
POST    /admin                          controllers.AdminController.login
GET     /admin/options                  controllers.AdminController.options

# Getting Stops and Connections
GET     /admin/stops                    controllers.AdminController.adminStops
GET     /admin/connections              controllers.AdminController.adminConnections

# Admin Stop Functions
GET     /admin/stops/add                controllers.AdminController.addStopForm
POST    /admin/stops/add                controllers.AdminController.doAddStop
GET     /admin/stops/delete/:id         controllers.AdminController.deleteStop(id: Long)

# Admin Connection Functions
GET     /admin/connections/add          controllers.AdminController.addConnectionForm
POST    /admin/connections/add          controllers.AdminController.doAddConnection
GET     /admin/Connections/delete/:id   controllers.AdminController.deleteConnection(id: Long)

